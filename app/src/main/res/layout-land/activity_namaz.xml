<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/iislammustard"
    tools:context=".Activities.Namaz">

    <ImageView
        android:id="@+id/imageView2"
        android:layout_width="288dp"
        android:layout_height="525dp"
        android:src="@drawable/back2a"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.0" />

    <ImageView
        android:id="@+id/imageView3"
        android:layout_width="0dp"
        android:layout_height="58dp"
        android:layout_marginEnd="8dp"
        android:layout_marginRight="8dp"
        android:layout_marginTop="168dp"
        android:src="@drawable/bismillah"

        app:layout_constraintEnd_toEndOf="@+id/imageView2"
        app:layout_constraintHorizontal_bias="1.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/qurani"
        android:layout_width="164dp"
        android:layout_height="60dp"
        android:layout_marginBottom="288dp"
        android:layout_marginEnd="132dp"

        android:background="@drawable/black_border"
        android:fontFamily="@font/opensans_regular"
        android:gravity="center"
        android:paddingLeft="15dp"
        android:paddingRight="15dp"
        android:text="Farz"
        android:textColor="@color/white"
        android:textSize="28sp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent" />

    <TextView
        android:id="@+id/masnoon"
        android:layout_width="164dp"
        android:layout_height="60dp"
        android:layout_marginBottom="8dp"

        android:background="@drawable/black_border"
        android:fontFamily="@font/opensans_regular"
        android:gravity="center"

        android:text="Nafal"
        android:textColor="@color/white"
        android:textSize="28sp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="@+id/qurani"
        app:layout_constraintTop_toBottomOf="@+id/qurani"
        app:layout_constraintVertical_bias="0.23" />

    <TextView
        android:id="@+id/azkar"
        android:layout_width="wrap_content"
        android:layout_height="60dp"
        android:layout_marginBottom="8dp"

        android:background="@drawable/black_border"
        android:fontFamily="@font/opensans_regular"
        android:gravity="center"
        android:paddingLeft="15dp"
        android:paddingRight="15dp"
        android:text="Azkar and Wazaif"
        android:textColor="@color/white"
        android:textSize="28sp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="@+id/qurani"
        app:layout_constraintTop_toBottomOf="@+id/masnoon"
        app:layout_constraintVertical_bias="0.365" />
</android.support.constraint.ConstraintLayout>